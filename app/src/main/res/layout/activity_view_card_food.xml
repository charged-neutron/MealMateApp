<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fitsSystemWindows="true"
    tools:context=".ViewCardFood">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_backarrow"
                app:title="Food Details" />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvFoodName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        tools:text="Delicious Biryani" />

                    <TextView
                        android:id="@+id/tvMessNameDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_restaurant"
                        tools:text="Posted by: Central Mess"
                        android:visibility="invisible"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/tvLocationDetail"
                        style="@style/DetailItemTextView"
                        app:drawableStartCompat="@drawable/ic_location"
                        tools:text="123 University Avenue, Main Campus" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        style="@style/DetailItemTextView"
                        app:drawableStartCompat="@drawable/ic_group"
                        tools:text="Serves 15 people" />

                    <TextView
                        android:id="@+id/tvPickupTime"
                        style="@style/DetailItemTextView"
                        app:drawableStartCompat="@drawable/ic_time"
                        tools:text="Pickup by 9:00 PM" />

                     <TextView
                        android:id="@+id/tvDay"
                        style="@style/DetailItemTextView"
                        app:drawableStartCompat="@drawable/ic_date"
                        tools:text="Today, Monday" />

                    <TextView
                        android:id="@+id/tvBestBefore"
                        style="@style/DetailItemTextView"
                        app:drawableStartCompat="@drawable/ic_best_before"
                        tools:text="Best before 11:00 PM" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Special Notes"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvFoodDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="14sp"
                        tools:text="Container will be provided. Please bring your own bag."/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBookFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:padding="16dp"
            android:text="Book This Food"
            app:cornerRadius="16dp" />
            
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMarkAsClaimed"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:padding="16dp"
            android:text="Mark as Claimed"
            android:visibility="gone"
            app:cornerRadius="16dp" />

    </LinearLayout>
</ScrollView>